{
  "name": "number-words",
  "version": "1.1.1",
  "description": "Convert a number into words",
  "license": "MIT",
  "repository": "andreruffert/number-words",
  "author": "AndrÃ© Ruffert",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "test": "xo && tape test.js | tap-spec",
    "browserify": "browserify src/index.js > dist/$npm_package_name.js --standalone $npm_package_name",
    "uglify": "uglifyjs dist/$npm_package_name.js -o dist/$npm_package_name.min.js",
    "build:js": "npm-run-all browserify uglify",
    "build": "mkdirp dist && npm-run-all build:*",
    "prepublishOnly": "npm run build && babel src --out-dir lib"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "space": true,
    "esnext": true,
    "ignores": [
      "lib/**"
    ],
    "rules": {
      "brace-style": [
        2,
        "stroustrup"
      ],
      "babel/arrow-parens": 0,
      "babel/object-curly-spacing": 0
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^17.0.0",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.2",
    "tap-spec": "^5.0.0",
    "tape": "^5.0.0",
    "uglify-js": "^3.8.1",
    "xo": "^0.38.1"
  }
}
